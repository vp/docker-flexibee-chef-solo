<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>FlexiBee server configuration</comment>
    <entry key="host"><%= node[:flexibee][:database][:host] %></entry>
    <entry key="port"><%= node[:flexibee][:database][:port] %></entry>
    <entry key="user"><%= node[:flexibee][:database][:user] %></entry>
    <entry key="password"><%= node[:flexibee][:database][:password] %></entry>
    <entry key="defaultPort"><%= node[:flexibee][:port] %></entry>

    <!-- Automatically send errors to FlexiBee? values: always|never -->
    <entry key="sendErrors"><%= node[:flexibee][:sendErrors] %></entry>

    <!-- Redirect from HTTP to HTTP? values: no|redirect|yes -->
    <entry key="forceHttps">redirect</entry>

    <!-- AutoUpgrade (upgrade companies during startup, true=upgrade after startup, false=upgrade on first access, default=false) -->
    <!-- <entry key="autoUpgrade">true</entry> -->

    <!-- developerDirectory -->
    <!-- <entry key="developerDirectory">/etc/flexibee/developer</entry> -->
    
    <!-- Enable WebHooks (must be enabled in license) -->
    <!-- <entry key="enableHooks">false</entry> -->

    <!-- Start kernel (kernel in app server) -->
    <!-- <entry key="startKernel">true</entry> -->

    <!-- EMAIL SETTINGS -->
    <!-- SMTP address of SMTP server -->
    <entry key="smtp.host"><%= node[:flexibee][:smtp][:host] %></entry>

    <!-- SMTP default from - email address of currently logged user is used (if present), otherwise it is used this -->
    <entry key="smtp.defaultFrom"><%= node[:flexibee][:smtp][:defaultFrom] %></entry>
    
    <!-- SMTP Auth username -->
    <entry key="smtp.auth.user"><%= node[:flexibee][:smtp][:user] %></entry>

    <!-- SMTP Auth Password -->
    <entry key="smtp.auth.password"><%= node[:flexibee][:smtp][:password] %></entry>

    <!-- SMTP encryption: NEVER | STARTTLS | TLS | SSL
    -++- NEVER - insecure connection
    -++- STARTTLS - connection begins insecure with optional switch to secured communication (TLS if supported)
    -++- TLS - initiated as insecure connection with required switch to secured communication (TLS)
    -++- SSL - fully secured connection (needed by GMail) -->
    <entry key="smtp.encryption"><%= node[:flexibee][:smtp][:encryption] %></entry>

    <!-- SMTP port (usually keep commented) -->
    <entry key="smtp.port">25</entry>
    
</properties>